@model CommentVM
@{
    ViewData["Title"] = "Comment";

}
<div class="">
    <h1 class="display-4">Comments</h1>
    <strong>Enter your comment</strong>
    <br />

</div>
<br />
<br />
<br />

<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" class="container">
    <div class="row p-2">
        <label asp-for="CommentText" class="control-label  col-md-1">Review</label><br />
        <textarea asp-for="CommentText" placeholder="Write your comment here" class="form-control col-md-6">
</textarea>
        <span asp-validation-for="CommentText" class="text-danger"></span>
    </div>
    <div class="row p-2">
        <button type="submit" class="form-control btn btn-success col-2">Submit</button>
    </div>
</form>

<br />
<hr />



